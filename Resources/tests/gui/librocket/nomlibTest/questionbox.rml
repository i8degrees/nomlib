<rml>
  <head>
    <title>CHOICE</title>
    <link type="text/template" href="window.rml" />
    <style>

      body
      {
        width: 124px;
        height: 72px;

        margin: auto;
      }

      body.window
      {
        min-width: 124px;
        min-height: 72px;
      }

      div#content
      {
        text-align: center;

        padding-top: 2%;
        padding-bottom: 2%;

        /*padding-left: 2%;*/
        /*padding-right: 2%;*/
      }

      /* TODO: use list markup elements here */
      .choice
      {
        display: block;
        color: white;
      }

      .choice.selected
      {
        color: red;
      }

    </style>
  </head>
  <body template="window">
    <p>Are you sure?</p>
    <span class='choice'>Yes</span>
    <span class='choice'>No</span>
  </body>
</rml>
