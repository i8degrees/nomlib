body
{
	/* FIXME */
	font-family: Open Sans;
	font-weight: normal;
	font-style: normal;
	font-size: 14px;
	color: white;
}

body.window
{
	/*padding-top: 43px;*/
	/*padding-bottom: 20px;*/
	/* Accounting for the title bar; this keeps the resize handle at bottom-right
	end of the window */
	padding-bottom: 30px;

	min-width: 200px;
	max-width: 800px;

	min-height: 48px;
	max-height: 700px;
}

div#title_bar
{
	z-index: 1;

	position: absolute;

	/*top: 0px;*/
	/*left: 0px;*/

	margin-left: -10px;
	margin-top: -15px;

	text-align: left;
}

div#title_bar span
{
	font-family: Delicious;
	color: white;
	font-size: 12px;
	font-weight: bold;
	outline-font-effect: outline;
	outline-width: 1px;
	outline-color: black;
}

div#window
{
	width: auto;
	padding: 10px 15px;

	background-decorator: final-fantasy-theme;
}

div#content
{
	z-index: 2;
	width: auto;
	/*height: 100%;*/
	overflow: hidden auto;
}

/* FIXME */
div#document:hover
{
	cursor: diag-resize;
}
